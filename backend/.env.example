# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Farm Management System
APP_ENV=development
DEBUG=True
API_VERSION=v1

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# ============================================================================
# DATABASE CONFIGURATION (Direct PostgreSQL Connection)
# ============================================================================
# Get connection string from: Supabase Dashboard > Project Settings > Database
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Database Pool Settings
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate a secure random key: openssl rand -hex 32
JWT_SECRET_KEY=your_secret_key_here_min_32_characters_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS SETTINGS
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# FRONTEND URL
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# API SETTINGS
# ============================================================================
API_BASE_URL=http://localhost:8000
API_PREFIX=/api/v1

# ============================================================================
# SECURITY
# ============================================================================
# Password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# FILE UPLOADS (Future use)
# ============================================================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_FOLDER=uploads

# ============================================================================
# EMAIL SETTINGS (Future use - for notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
