# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=Farm Management System
APP_ENV=development
DEBUG=True
API_VERSION=v1

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# ⚠️ IMPORTANT: These settings have been moved to the database!
# Configure via: Settings UI > System Settings (Admin only)
#
# The values below serve as FALLBACK ONLY if database settings are not available.
# For production, it's recommended to configure these via the Settings UI.
#
# To configure via Settings UI:
# 1. Login as admin
# 2. Navigate to Settings
# 3. Update 'supabase_url' and 'supabase_service_key'
#
# For local development fallback, uncomment and set:
# SUPABASE_URL=https://your-project-id.supabase.co
# SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
#
# (Note: SUPABASE_ANON_KEY removed as it's not used by the backend)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# ============================================================================
# DATABASE CONFIGURATION (Direct PostgreSQL Connection)
# ============================================================================
# Get connection string from: Supabase Dashboard > Project Settings > Database
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# Database Pool Settings
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate a secure random key: openssl rand -hex 32
JWT_SECRET_KEY=your_secret_key_here_min_32_characters_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS SETTINGS
# ============================================================================
# Comma-separated list of allowed origins
# For production, add your frontend URL: https://your-frontend-url.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# FRONTEND URL
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# API SETTINGS
# ============================================================================
API_BASE_URL=http://localhost:8000
API_PREFIX=/api/v1

# ============================================================================
# SECURITY
# ============================================================================
# Password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# FILE UPLOADS (Future use)
# ============================================================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_FOLDER=uploads

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================
# ⚠️ IMPORTANT: This setting has been moved to the database!
# Configure via: Settings UI > Telegram Settings (Admin only)
#
# The value below serves as FALLBACK ONLY if database setting is not available.
# For production, it's recommended to configure this via the Settings UI.
#
# To configure via Settings UI:
# 1. Login as admin
# 2. Navigate to Settings > Telegram
# 3. Enter your bot token and save
#
# For local development fallback, set:
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
#
# To get a bot token:
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot and follow instructions
# 3. Copy the bot token provided
#
# Leave empty to disable Telegram notifications
TELEGRAM_BOT_TOKEN=

